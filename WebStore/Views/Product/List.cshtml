@model ProductListViewModel

@{
    int i = 0;
}


@foreach (var p in Model.Products)
{
    i++;
    if (i % 2 != 0)
    {
        <div class="col col_14 product_gallery no_margin_right">
            <a href="#"><img src="@p.Images" alt="Product 01" /></a>
            <h3>@p.Name</h3>
            <p>@p.Description</p>
            <p class="product_price">@p.Price.ToString("C0")</p>
            <a href="#" class="add_to_cart">Add to Cart</a>
        </div>
    }
    else
    {
        <div class="col col_14 product_gallery">
            <a href="#"><img src="@p.Images" alt="Product 01" /></a>
            <h3>@p.Name</h3>
            <p>@p.Description</p>
            <p class="product_price">@p.Price.ToString("C0")</p>
            <a href="#" class="add_to_cart">Add to Cart</a>
        </div>
    }
}
<div class="buttonmargin" page-model="@Model.PagingInfo" page-action="List"></div>

